{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;initial catalog=CMS;Database=CMSDao;Trusted_Connection=True;"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": "Warning",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "loggers/",
          "logFilePathFormat": "@\"Log-'yyyy-MM-dd'.log'\"",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "buffered": true
        }
      }
    ],
    "Properties": {
      "Application": "CMS.Web.Mvc"
    }
  }
}
